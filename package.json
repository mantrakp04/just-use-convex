{
  "name": "just-use-convex",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/node": "^24.10.13",
      "@convex-dev/eslint-plugin": "^1.1.1",
      "@eslint/js": "^9.30.0",
      "eslint": "^9.30.0",
      "typescript-eslint": "^8.49.0",
      "dotenv": "^17.2.3",
      "mime": "^4.1.0",
      "zod": "^4.3.6",
      "typescript": "6.0.0-beta",
      "convex": "^1.32.0",
      "better-auth": "^1.4.19",
      "@convex-dev/better-auth": "^0.10.11",
      "croner": "^9.0.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint --",
    "lint:fix": "turbo lint -- --fix",
    "check-unused-exports": "ts-unused-exports ./apps/web/tsconfig.json && ts-unused-exports ./packages/env/tsconfig.json && ts-unused-exports ./packages/agent/tsconfig.json && ts-unused-exports ./packages/backend/convex/tsconfig.json",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @just-use-convex/backend dev",
    "dev:setup": "turbo -F @just-use-convex/backend dev:setup"
  },
  "dependencies": {
    "@convex-dev/aggregate": "^0.2.1",
    "@convex-dev/better-auth": "^0.10.11",
    "@convex-dev/migrations": "^0.3.1",
    "@convex-dev/react-query": "^0.1.0",
    "convex": "^1.32.0",
    "convex-ents": "^0.20.0",
    "convex-helpers": "^0.1.114",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@just-use-convex/config": "workspace:*",
    "@just-use-convex/env": "workspace:*",
    "@noble/ciphers": "^2.1.1",
    "eslint": "catalog:",
    "ts-unused-exports": "^11.0.1",
    "turbo": "^2.8.10",
    "typescript-eslint": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
